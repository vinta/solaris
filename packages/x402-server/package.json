{
  "name": "@mev-searcher/x402-server",
  "version": "0.0.1",
  "description": "Minimal API server secured with the x402 payments protocol.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "generate-types": "npx wrangler types",
    "preserver": "npm run build",
    "server": "npx wrangler dev --local",
    "preclient": "npm run build",
    "client": "node dist/src/client.js",
    "deploy": "npx wrangler deploy"
  },
  "dependencies": {
    "@coinbase/x402": "0.7.1",
    "@hono/node-server": "1.19.6",
    "dotenv": "17.2.3",
    "hono": "4.10.6",
    "viem": "2.39.0",
    "x402": "0.7.2",
    "x402-fetch": "0.7.0",
    "x402-hono": "0.7.1"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
