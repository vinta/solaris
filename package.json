  "homepage": "https://github.com/vinta/solaris",
  "keywords": [],
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "forge build --sizes",
    "test": "forge test -vvv",
    "coverage": "forge coverage --report summary --report lcov && rm -rf coverage && genhtml --branch-coverage --output coverage lcov.info",
    "snapshot": "forge snapshot",
    "snapshot:check": "forge snapshot --check --tolerance 5",
    "deploy": "hardhat deploy --network optimism",
    "verify": "hardhat --network optimism tenderly:push",
    "clean:foundry": "rm -rf cache/ out/",
    "clean:hardhat": "rm -rf deployments/localhost/ hardhat-*/ typechain-types/",
    "hardhat:build": "hardhat compile",
    "hardhat:node": "hardhat node --network hardhat",
    "hardhat:deploy": "hardhat deploy --network localhost"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "3.0.4",
    "@nomicfoundation/hardhat-foundry": "1.1.1",
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@types/node": "20.8.6",
    "ethers": "6.8.0",
    "hardhat": "2.19.0",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-deploy": "0.11.43",
    "hardhat-deploy-tenderly": "0.2.0",
    "prettier": "3.0.3",
    "prettier-plugin-solidity": "1.1.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
